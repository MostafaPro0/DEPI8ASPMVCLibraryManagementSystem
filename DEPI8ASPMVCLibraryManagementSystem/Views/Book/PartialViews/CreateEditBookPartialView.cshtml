@model DEPI8ASPMVCLibraryManagementSystem.Models.Book

<div class="form-group">
    <label class="col-form-label" asp-for="Title"></label>
    <input class="form-control" asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Genre"></label>
    <input class="form-control" asp-for="Genre" />
    <span asp-validation-for="Genre" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PublishedDate"></label>
    <input class="form-control" type="date" asp-for="PublishedDate" />
    <span asp-validation-for="PublishedDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="AuthorId"></label>
    @Html.DropDownListFor(m => m.AuthorId, ViewBag.AuthorsList as IEnumerable<SelectListItem>, "Select Author", new { @class = "form-control form-select" })
    <span asp-validation-for="AuthorId" class="text-danger"></span>
</div>


